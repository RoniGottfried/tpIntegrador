<!-- Include Head -->
<%- include('./headerLogueado') %>

	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="foto-perfil">
				<img src="/public/images/<% data.image_profile %>" alt="foto perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"> <%= data.user %> 
						<a href="/users/perfil-edit/<%= data.id_user %>">
							<i class="fas fa-cog"></i>
						</a>
					</h1>
					<a class="btn mt-3 ml-4" href="">SEGUIR</a>
				</div>
				<div>
					<ul class="">
						<li>8 productos</li>
						<li>200 seguidores</li>
						<li>300 comentarios</li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Mis productos</h2>
			</div>
			<!-- Show mis productos -->
			<% if(data.products.length != 0) {  %>
			<% for(let i=0; i<data.products.length; i++){ %>
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/products">
						<figure class="product-box_image">
							<img src="<%= data.products[i].image_product %>" alt="foto">
						</figure>
						
						<article class="product-box_data">
							<h2><%= data.products[i].name_product %></h2>
							<p><%= data.products[i].description %></p>
							<p></p>
							<p>Comentarios: <%= data.products[i].comments.length %> </p>
						</article>
						
					</a>
				</section>
			</div>
			<% } %>
			
		</div>
	</div>
	
	<!-- /Mis productos -->


	<!-- footer -->
	<%- include("./partials/footer") %> 
	<!-- /footer -->
</body>	
</html>